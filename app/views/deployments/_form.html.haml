
= simple_form_for(@deployment, :html => { class: "form-group" }) do |f|
  = f.error_notification


  .field
    
    = f.text_field :deploy_date, as: :datepicker, type: "date", :required => true, class: 'form-control'
  .hidden 
    = f.association :customer, class: "hidden"
  .field
    = f.association :release, :label_method => :version, :value_method => :id,:required => true
  .actions
    = f.submit @deployment.new_record? ? "Submit" : "Submit Deployment", :class => 'btn btn-info' 
