%h1 Listing deployments

%strong Show By Customer:
= form_tag(deployments_path, {:method => :get}) do
  = select_tag :customer_id, options_from_collection_for_select(@customers, "id", "name"), {:prompt => 'Select Company'}
  =  submit_tag nil, :class => "btn btn-default btn-xs"
  = link_to "Show All", deployments_path, :class => "btn btn-info btn-xs"
 

%table.table
  %thead

    %th Customer
    %th Deployment Date
    %th Version
    
    %th
  %tbody



  - @deployments.each do |deployment|
    %tr
      %td= deployment.customer.name
      %td= deployment.deploy_date
      %td= deployment.release.version
     
      %td= link_to content_tag(:i,nil, :class=>"fa fa-trash-o"), deployment, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'List of Customers', customers_path, :class => "btn btn-link"

