= render "index_header"


%table.table.table-bordered.table-hover
  %thead
 
    %th Version
    %th Release Date
    %th Comments

  %tbody

  - @releases.each do |release|
    %tr
      %td= release.version
      %td= release.release_date
      %td= truncate(release.comments[0,40])


= render "index_footer"